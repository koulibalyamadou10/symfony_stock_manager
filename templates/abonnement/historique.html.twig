{% extends 'base.html.twig' %}

{% block title %}Historique des abonnements{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-history me-2"></i>
                        Historique des abonnements
                    </h4>
                    <a href="{{ path('app_abonnement_status') }}" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>
                        Retour au statut
                    </a>
                </div>
                <div class="card-body">
                    {% if abonnements|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date de début</th>
                                        <th>Date de fin</th>
                                        <th>Montant</th>
                                        <th>Transaction</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for abonnement in abonnements %}
                                        <tr>
                                            <td>{{ abonnement.dateDebut|date('d/m/Y H:i') }}</td>
                                            <td>{{ abonnement.dateFin|date('d/m/Y H:i') }}</td>
                                            <td>{{ abonnement.montant|number_format(0, ',', ' ') }} GNF</td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ abonnement.transactionId }}
                                                </small>
                                            </td>
                                            <td>
                                                {% if abonnement.estActif and abonnement.dateFin > date() %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% elseif abonnement.statut == 'en_attente' %}
                                                    <span class="badge bg-warning">En attente</span>
                                                {% elseif abonnement.statut == 'echec' %}
                                                    <span class="badge bg-danger">Échec</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Expiré</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucun historique d'abonnement disponible.
                        </div>
                    {% endif %}
                </div>
            </div>

            {% if not app.user.hasAbonnementActif %}
                <div class="text-center mt-4">
                    <a href="{{ path('app_abonnement_souscrire') }}" class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>
                        Souscrire à un nouvel abonnement
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

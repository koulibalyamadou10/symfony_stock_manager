{% extends 'base.html.twig' %}

{% block title %}Statut de l'abonnement{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>
                        Statut de votre abonnement
                    </h4>
                </div>
                <div class="card-body">
                    {% if abonnement %}
                        <div class="alert alert-success">
                            <h5><i class="fas fa-check-circle me-2"></i>Abonnement actif</h5>
                            <p class="mb-0">Votre abonnement est valide jusqu'au {{ abonnement.dateFin|date('d/m/Y') }}.</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Informations de l'abonnement :</h6>
                                <ul class="list-unstyled">
                                    <li><strong>Date de début :</strong> {{ abonnement.dateDebut|date('d/m/Y') }}</li>
                                    <li><strong>Date de fin :</strong> {{ abonnement.dateFin|date('d/m/Y') }}</li>
                                    <li><strong>Montant :</strong> {{ abonnement.montant|number_format(0, ',', ' ') }} GNF</li>
                                    <li><strong>Statut :</strong> 
                                        <span class="badge bg-success">{{ abonnement.statut|title }}</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6>Actions disponibles :</h6>
                                <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    Accéder au tableau de bord
                                </a>
                                <a href="{{ path('app_abonnement_historique') }}" class="btn btn-outline-secondary mt-2">
                                    <i class="fas fa-history me-2"></i>
                                    Voir l'historique
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle me-2"></i>Aucun abonnement actif</h5>
                            <p>Vous devez souscrire à un abonnement mensuel pour accéder aux fonctionnalités de l'application.</p>
                        </div>
                        
                        <div class="text-center">
                            <div class="card bg-light mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">Abonnement mensuel</h5>
                                    <h2 class="text-primary">50 000 GNF</h2>
                                    <p class="card-text">Accès complet à toutes les fonctionnalités de gestion de stock</p>
                                    <ul class="list-unstyled text-start">
                                        <li><i class="fas fa-check text-success me-2"></i>Gestion des produits</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Gestion des catégories</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Suivi des stocks</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Rapports et statistiques</li>
                                    </ul>
                                </div>
                            </div>
                            
                            <a href="{{ path('app_abonnement_souscrire') }}" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card me-2"></i>
                                Souscrire maintenant
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

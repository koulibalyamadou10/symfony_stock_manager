{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-tags"></i> Catégories</h1>
                <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvelle catégorie
                </a>
            </div>
        </div>
    </div>

    {% if categories|length > 0 %}
    <div class="row">
        {% for categorie in categories %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">{{ categorie.nom }}</h6>
                </div>
                <div class="card-body">
                    {% if categorie.description %}
                        <p class="card-text">{{ categorie.description|slice(0, 100) }}{% if categorie.description|length > 100 %}...{% endif %}</p>
                    {% else %}
                        <p class="card-text text-muted">Aucune description</p>
                    {% endif %}
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="bi bi-box"></i> {{ categorie.produits|length }} produit(s)
                        </small>
                    </p>
                </div>
                <div class="card-footer">
                    <div class="btn-group w-100" role="group">
                        <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" 
                           class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" 
                           class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle display-4 mb-3"></i>
                <h4>Aucune catégorie trouvée</h4>
                <p>Commencez par créer votre première catégorie !</p>
                <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Créer une catégorie
                </a>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}